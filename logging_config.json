{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "detailed": {
      "format": "%(asctime)s | %(levelname)-8s | %(name)-20s | %(funcName)-15s:%(lineno)-4d | %(message)s",
      "datefmt": "%Y-%m-%d %H:%M:%S"
    },
    "simple": {
      "format": "%(asctime)s | %(levelname)-8s | %(message)s",
      "datefmt": "%Y-%m-%d %H:%M:%S"
    },
    "json": {
      "format": "{\"timestamp\": \"%(asctime)s\", \"level\": \"%(levelname)s\", \"logger\": \"%(name)s\", \"function\": \"%(funcName)s\", \"line\": %(lineno)d, \"message\": \"%(message)s\"}",
      "datefmt": "%Y-%m-%d %H:%M:%S"
    },
    "minimal": {
      "format": "%(levelname)s: %(message)s"
    }
  },
  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "level": "INFO",
      "formatter": "simple",
      "stream": "ext://sys.stdout"
    },
    "console_debug": {
      "class": "logging.StreamHandler",
      "level": "DEBUG",
      "formatter": "detailed",
      "stream": "ext://sys.stdout"
    },
    "file": {
      "class": "logging.FileHandler",
      "level": "DEBUG",
      "formatter": "detailed",
      "filename": "output/liver_disease_prediction.log",
      "mode": "w",
      "encoding": "utf-8"
    },
    "json_file": {
      "class": "logging.FileHandler",
      "level": "DEBUG",
      "formatter": "json",
      "filename": "output/liver_disease_prediction_structured.json",
      "mode": "w",
      "encoding": "utf-8"
    },
    "error_file": {
      "class": "logging.FileHandler",
      "level": "ERROR",
      "formatter": "detailed",
      "filename": "output/errors.log",
      "mode": "w",
      "encoding": "utf-8"
    }
  },
  "loggers": {
    "": {
      "level": "INFO",
      "handlers": ["console", "file"],
      "propagate": false
    },
    "structured": {
      "level": "DEBUG",
      "handlers": ["json_file"],
      "propagate": false
    },
    "errors": {
      "level": "ERROR",
      "handlers": ["error_file"],
      "propagate": false
    }
  }
}
